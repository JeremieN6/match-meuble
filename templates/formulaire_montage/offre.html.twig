{% extends 'base.html.twig' %}

{% block title %}Match Montage+ | Formulaire offre pour montage {% endblock %}

{% block body %}

<section class="bg-surface-50 dark:bg-gray-900">
    <div class="max-w-screen-lg mx-auto px-4 py-10 lg:py-14">
        <div class="mb-6">
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white">Proposer une offre</h1>
            <p class="mt-2 text-gray-600 dark:text-gray-400">Formulaire pour créer une offre de montage de meuble.</p>
        </div>

        <div class="rounded-xl border border-surface-200 bg-white dark:bg-gray-800 dark:border-gray-700 shadow-sm">
            <div class="p-6 lg:p-8">
                {% form_theme offreMontageForm 'form/_tailwind_theme.html.twig' %}
                {{ form_start(offreMontageForm, {'attr': {'class': 'space-y-6'}}) }}
                    {# Exemple: si des champs existent, form_row rendra avec notre thème #}
                    {{ form_widget(offreMontageForm) }}
                    <div class="flex items-center gap-3 pt-2">
                        <button type="submit" class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 rounded-lg dark:bg-primary-600 dark:hover:bg-primary-700">Publier l'offre</button>
                        <a href="{{ path('app_home') }}" class="inline-flex items-center px-5 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">Retour</a>
                    </div>
                {{ form_end(offreMontageForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}