{% extends 'base.html.twig' %}

{% block title %}Voyageur + | Connexion{% endblock %}

{% block body %}
<main class="container">
    <article class="grid">
        <div>
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
    
                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a
                        href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}
    
                <hgroup>
                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                    <h2>Retrouvez tous vos voyages</h2>
                </hgroup>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password" required>
    
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me
                functionality.
                See https://symfony.com/doc/current/security/remember_me.html
    
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <a href="{{path('forgetten_password')}}">Mot de passe oublié ? Clique ici</a> <br><br>
                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
            </form>
            <hgroup>
                {# <p>Pas encore de compte ?</p> #}
                <a href="{{path('app_register')}}">
                    <button class="outline">S'inscrire</button>
                </a>
            </hgroup>
        </div>
        <div>
            <img class="img-signIn"
                src="https://images.pexels.com/photos/447592/pexels-photo-447592.jpeg?auto=compress&cs=tinysrgb&w=600"
                alt="img-sign-in">
            </div>
    </article>
</main>

{% endblock %}